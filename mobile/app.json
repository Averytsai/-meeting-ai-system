{
  "expo": {
    "name": "AI 會議助手",
    "slug": "meeting-ai",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0a0a0f"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.averytsai.meetingai",
      "buildNumber": "3",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "AI 會議助手需要使用麥克風來錄製會議內容，以便進行語音轉文字和生成會議摘要。",
        "UIBackgroundModes": [
          "audio"
        ],
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true,
          "NSExceptionDomains": {
            "tw-07.access.glows.ai": {
              "NSExceptionAllowsInsecureHTTPLoads": true,
              "NSIncludesSubdomains": true
            }
          }
        },
        "CFBundleDisplayName": "AI 會議助手",
        "LSApplicationQueriesSchemes": ["mailto"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0a0a0f"
      },
      "package": "com.averytsai.meetingai",
      "versionCode": 3,
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK"
      ],
      "usesCleartextTraffic": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-av",
        {
          "microphonePermission": "AI 會議助手需要使用麥克風來錄製會議內容"
        }
      ]
    ]
  }
}
